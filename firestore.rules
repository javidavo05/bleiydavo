rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Función para verificar si el usuario es admin
    function isAdmin() {
      return request.auth != null && 
             request.auth.token.email == 'jvallejo@bleiydavo.com';
    }
    
    // Función para verificar si el usuario está autenticado
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Reglas para la colección de meses
    match /months/{monthId} {
      // Los usuarios autenticados pueden leer
      allow read: if isAuthenticated();
      
      // Solo el admin puede escribir
      allow write: if isAdmin();
    }
    
    // Reglas para la configuración
    match /settings/{settingId} {
      // Los usuarios autenticados pueden leer
      allow read: if isAuthenticated();
      
      // Solo el admin puede escribir
      allow write: if isAdmin();
    }
    
    // Denegar acceso a cualquier otra colección no especificada
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

